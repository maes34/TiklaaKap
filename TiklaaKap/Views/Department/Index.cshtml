@using TiklaaKap.Models.Class
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departmanlar</li>
</ol>
<a class="btn btn-primary float-right" style="margin-left:10px;" href="/Department/DepartmentAdd/">Yeni Departman</a> <a class="btn btn-outline-danger float-right"  href="/Department/PasifDepartment/">Pasif Departmanlar</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Departman Adı</th>
                <th class="w-25">İşlemler</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Departman Adı</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.DepartmentID</td>
                    <td><a class="text-dark" href="/Department/DepartmentDetail/@d.DepartmentID">@d.DepartmentName</a></td>
                    <td class="w-25">
                        <a class="btn btn-outline-warning" href="/Department/DepartmentView/@d.DepartmentID">Düzenle</a>
                        <a class="btn btn-outline-primary" href="/Department/DepartmentDetail/@d.DepartmentID">Detaylar</a>
                        <a class="btn btn-danger" href="/Department/DepartmentDelete/@d.DepartmentID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
