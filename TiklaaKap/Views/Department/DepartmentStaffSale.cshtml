@using TiklaaKap.Models.Class
@model List<Sale>
@{
    ViewBag.Title = "DepartmentStaffSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Satışlar</li>
    <li class="breadcrumb-item active">Personel Adı : <b>&nbsp;(@ViewBag.staffs)&nbsp;</b></li>

</ol>
<a class="btn btn-secondary float-right" style="margin-left:10px;" href="/Staff/Index/">Geri</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cari</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Cari</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var s in Model)
            {
            <tr>
                <td>@s.SalesID</td>
                <td>@s.Cariler.CariAd @s.Cariler.CariSoyad</td>
                <td>@s.Product.ProductName</td>
                <td>@s.Quantity</td>
                <td>@s.Price</td>
                <td>@s.TotalPrice</td>
                <td>@s.Date</td>
                <td><a class="btn btn-outline-primary" href="">Yazdır</a></td>

            </tr>
            }
        </tbody>
    </table>
</div>