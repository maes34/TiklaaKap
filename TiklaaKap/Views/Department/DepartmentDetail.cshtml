@using TiklaaKap.Models.Class
@model List<Staff>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"><b>(@ViewBag.deptname)&nbsp;</b> Departmanın'da Görevli Personeller</li>
</ol>
<a class="btn btn-secondary float-right" style="margin-left:10px;" href="/Department/Index/">Geri</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Görsel</th>
                <th>Personel</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Görsel</th>
                <th>Personel</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.StaffID</td>
                    <td>@x.StaffImage</td>
                    <td>@x.StaffName @x.StaffSurname</td>
                    <td class="w-25">
                        <a class="btn btn-outline-primary" href="/Department/DepartmentStaffSale/@x.StaffID">Satışlar</a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>