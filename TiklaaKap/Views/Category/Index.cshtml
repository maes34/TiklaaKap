@using TiklaaKap.Models.Class
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Kategoriler</li>
</ol>
<a class="btn btn-primary float-right" href="/Category/CategoryAdd/">Yeni Kategori</a><br /><br />
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th class="w-25">İşlemler</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.CategoryID</td>
                    <td>@x.CategoryName</td>
                    <td>

                        <a class="btn btn-outline-warning" href="/Category/CategoryView/@x.CategoryID">Düzenle</a>
                        <a class="btn btn-danger" href="/Category/CategoryDelete/@x.CategoryID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
