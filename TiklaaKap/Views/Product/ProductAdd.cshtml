@model TiklaaKap.Models.Class.Product

@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Ürünler</li>
    <li class="breadcrumb-item active">Yeni Ürün Ekle</li>
</ol>

<form class="form-group" method="post">
    <span>Ürün Resim</span>
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control", placeholder = "Ürün Görseli" })<br />
    <span>Ürün Ad</span>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Ürün Adı" })<br />
    <span>Marka</span>
    @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control", placeholder = "Marka" })<br />
    <span>Kategori</span>
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.proList, new { @class = "form-control"})<br />
    <span>Açıklama</span>
    @Html.TextAreaFor(x => x.ProductDesc, new { @class = "form-control", rows = "15", cols = "150", placeholder = "Açıklama" })<br />
    <span>Stok</span>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", placeholder = "Ürün Stok" })<br />
    <span>Alış fiyatı</span>
    <div class="input-group mb-3">
        @Html.TextBoxFor(x => x.BuyPrice, new { @class = "form-control", placeholder = "Ürün Alış Fiyatı" })
        <div class="input-group-append">
            <span class="input-group-text">TL</span>
        </div>
    </div>
    <span>Satış fiyatı</span>
    <div class="input-group mb-3">
        @Html.TextBoxFor(x => x.SellPrice, new { @class = "form-control", placeholder = "Ürün Satış Fiyatı" })
        <div class="input-group-append">
            <span class="input-group-text">TL</span>
        </div>
    </div>
    <br />
    <a class="btn btn-secondary" href="/Product/Index/">Geri</a>
    <button class="btn btn-success">Kaydet</button>
</form>